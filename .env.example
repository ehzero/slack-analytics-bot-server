# 서버 설정
PORT=3000

# 로그 레벨
LOG_LEVEL=INFO

# Slack 설정
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_USER_ID=U01234567890
REPORT_CHANNEL_ID=C01234567890

# OpenAI 설정
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-5-nano

# MySQL 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database_name

# 스케줄 설정 (cron 형식: 분 시 일 월 요일)
# 기본값: 매주 일요일 23:00 UTC (월요일 08:00 KST)
SCHEDULE_EXPRESSION="0 23 * * 0"

# 개발/테스트용 옵션
# 서버 시작 시 즉시 보고서 실행 여부 (true/false)
RUN_REPORT_ON_START=false